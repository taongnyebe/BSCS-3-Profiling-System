#container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.item {
  flex: 0 0 calc(40% - 20px);
  background: teal;
  color: white;
  padding: 12px;
  width: 50%;
  margin: 0.75%;
}

* {
  box-sizing: border-box;
}

a{
	text-align: center;
	font-size: 155%;
	display:block;
}

#verticalcontainer {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.vertitem {
  flex: 0 0 calc(20% - 20px);
  background: teal;
  padding: 10px;
  width: 50%;
  margin: 1%;
}

* {
  box-sizing: border-box;
}

a{
	text-align: center;
	font-size: 155%;
	display:block;
}

.vertitem a:hover {
	cursor: pointer;
}

.vertitem a{
	color: white;
}