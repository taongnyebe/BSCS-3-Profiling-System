.btn1 {
  border: none;
  color: white;
  padding: 12px 16px;
  font-size: 16px;
  cursor: pointer;
}

.btn1:hover {
  background-color: RoyalBlue;
}

.grid-container1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
	margin-left: 19%;
	margin-right: 100px;
	background-color: none;
}

.subjectdiv button {
  background-color: #04AA6D; 
  border: none; 
  color: white; 
  padding: 16px 20px;
  cursor: pointer; 
  float: left;
  margin-bottom: 5px;
}
.subjectdiv a{
	float: right;
	padding-right: 10px;
}

.subjectdiv button:not(:last-child) {
  border-right: none; 
}


.subjectdiv:after {
  content: "";
  clear: both;
  display: table;
}