.studentdiv button {
  background-color: #04AA6D; 
  border: none; 
  color: white; 
  padding: 16px 24px;
  cursor: pointer; 
  float: left;
  margin-bottom: 1px;
  
}
.studentdiv a{
	float: right;
	margin-right: 10px;
	padding-right: 10px;
}

.studentdiv button:not(:last-child) {
  border-right: none; 
}


.studentdiv:after {
  content: "";
  clear: both;
  display: table;
}

.btn {
  background-color: DodgerBlue;
  border: none;
  color: white;
  padding: 12px 16px;
  font-size: 16px;
  cursor: pointer;
}

.grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
	margin-left: 180px;
	margin-top: 20px;
}

