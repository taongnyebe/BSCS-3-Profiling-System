.btn-group button {
  border: 1px ; 
  border-radius: 10px;
  color: white; 
  cursor: pointer; 
  width: 50%; 
  height: 20%;
  display: relative;
  text-align: center;
  background-image: linear-gradient(0.30turn, rgba(255,255,255,.50) 30%, blue, skyblue), url("CS2.png");
  background-repeat: no-repeat;
  background-position: left;

 
}
button{
	margin: 1%;
}
.btn-group button:not(:last-child) {
  border-bottom: none;
}

.btn-group a{
	display:flex;
	justify-content: center;
	float: center;
}

.btn-group img{
	float: left;
	opacity: 0.5;
}
